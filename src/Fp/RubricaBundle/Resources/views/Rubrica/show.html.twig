{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Rubrica</h1>

    <table class="record_properties">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ entity.id }}</td>
            </tr>
            <tr>
                <th>Nome</th>
                <td>{{ entity.nome }}</td>
            </tr>
            <tr>
                <th>Cognome</th>
                <td>{{ entity.cognome }}</td>
            </tr>
            <tr>
                <th>Indirizzo</th>
                <td>{{ entity.indirizzo }}</td>
            </tr>
            <tr>
                <th>Telefono</th>
                <td>{{ entity.telefono }}</td>
            </tr>
            <tr>
                <th>Cellulare</th>
                <td>{{ entity.cellulare }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ entity.email }}</td>
            </tr>
            <tr>
                <th>Ufficio</th>
                <td>{{ entity.ufficio.ufficio }}</td>
            </tr>
             <tr>
                <th>Tipo Ufficio</th>
                <td>{{ entity.ufficio.typeufficio }}</td>
            </tr>
             <tr>
                <th>Data Creazione</th>
               <td>{{ entity.created|date('Y-m-d H:i:s') }}</td>
            </tr>
            <tr>
                <th>Data Modifica</th>
               <td>{{ entity.modify|date() }}</td>
            </tr>
            {#<tr>
                {% if entity.datanascita is not empty %} 
                <th>eta</th>
               <td>{{ entity.getEta() }}</td>
               {%endif%}
            </tr>#}
        </tbody>
    </table>

        <ul class="record_actions">
    <li>
        <a href="{{ path('rubrica') }}">
            Back to the list
        </a>
    </li>
    <li>
        <a href="{{ path('rubrica_edit', { 'id': entity.id }) }}">
            Edit
        </a>
    </li>
    <li>{{ form(delete_form) }}</li>
</ul>
{% endblock %}
